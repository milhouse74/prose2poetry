#!/usr/bin/env python3

import nltk
from nltk.corpus import cmudict
nltk.download('cmudict')

dic = dict(cmudict.entries())

'''assume that keyword is in dic'''
def rhyme_score(keyword, suggestion):
	if not suggestion in dic.keys():
		return 0
	keyword_syl = dic[keyword]
	suggestion_syl = dic[suggestion]

	ordered_overlap = 0

	max_idx_backwards = min(len(keyword_syl), len(suggestion_syl))

	for i in range(max_idx_backwards,reverse=True):
		print(i)

	return 0


if __name__ == '__main__':
    pairs = [
        ('cow', 'bow'),
        ('behavior', 'savior'),
        ('squirrel', 'quarrel'),
        ('alabaster', 'plaster'),
        ('dog', 'cat'),
        ('dog', 'god'),
        ('dog', 'slog'),
    ]
    for p in pairs:
        print('rhyme_score of {0}, {1}: {2}'.format(p[0], p[1], rhyme_score(p[0], p[1])))
